<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.devcrew.baseproject.presentation.ui.home.HomeFragment"
        android:label="HomeFragment" />

    <fragment
        android:id="@+id/myPlantsFragment"
        android:name="com.devcrew.baseproject.presentation.ui.myplants.MyPlantsFragment"
        android:label="fragment_local"
        tools:layout="@layout/fragment_myplants">
        <action
            android:id="@+id/action_myPlantsFragment_to_plantDetailFragment"
            app:destination="@id/plantDetailFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>
    <fragment
        android:id="@+id/plantDetailFragment"
        android:name="com.devcrew.baseproject.presentation.ui.myplants.PlantDetailFragment"
        android:label="fragment_plant_detail"
        tools:layout="@layout/fragment_plant_detail" >
        <argument
            android:name="plant"
            app:argType="com.devcrew.baseproject.domain.entity.Plant" />
    </fragment>

</navigation>